<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="eyeforeye.eyediseasesclassification.EvaluationController"
            prefHeight="600.0" prefWidth="900.0">
    <top>
        <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Evaluasi Model Kuantitatif" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Pilih folder root dari dataset uji Anda. Folder ini harus berisi sub-folder yang namanya sama persis dengan kelas model (misal: 'Glaucoma', 'Healthy', dll)." 
                   wrapText="true" />
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="selectFolderButton" text="📁 Pilih Folder Dataset Uji" 
                        onAction="#onSelectFolderClicked" prefWidth="220"/>
                <Button fx:id="evaluateButton" text="🚀 Mulai Evaluasi" 
                        onAction="#onEvaluateClicked" prefWidth="150" 
                        style="-fx-background-color: #FF5722; -fx-text-fill: white;"
                        disable="true" />
                <Label fx:id="folderLabel" text="Belum ada folder dipilih" 
                       style="-fx-font-style: italic;"/>
            </HBox>
            
            <ProgressBar fx:id="progressBar" prefWidth="Infinity" progress="0" visible="false"/>
            <Label fx:id="statusLabel" text="Status: Menunggu" />
        </VBox>
    </top>
    
    <center>
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="Hasil Evaluasi:" style="-fx-font-weight: bold;"/>
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                <TextArea fx:id="resultTextArea" editable="false" 
                          promptText="Hasil metrik akan ditampilkan di sini..."
                          style="-fx-font-family: 'Monospaced'; -fx-font-size: 12px;" />
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>