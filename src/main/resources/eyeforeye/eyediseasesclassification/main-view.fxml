<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="800.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eyeforeye.eyediseasesclassification.MainController">
    
    <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <!-- Judul aplikasi -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Aplikasi Klasifikasi Penyakit Mata" />

        <!-- Main Content Area -->
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- Left Side: Images and Controls -->
            <VBox spacing="15" alignment="TOP_CENTER" prefWidth="550">
                <!-- Container untuk gambar dan Grad-CAM -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Original Image -->
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Original Image" style="-fx-font-weight: bold;"/>
                        <ImageView fx:id="imageView" fitHeight="220.0" fitWidth="220.0" preserveRatio="true" 
                                  style="-fx-border-color: #cccccc; -fx-border-width: 2;"/>
                    </VBox>
                    
                    <!-- Grad-CAM Heatmap -->
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Grad-CAM Heatmap" style="-fx-font-weight: bold;"/>
                        <ImageView fx:id="gradcamImageView" fitHeight="220.0" fitWidth="220.0" preserveRatio="true" 
                                  style="-fx-border-color: #cccccc; -fx-border-width: 2; -fx-background-color: #f0f0f0;"/>
                    </VBox>
                </HBox>

                <!-- Label hasil prediksi -->
                <Label fx:id="predictionLabel" text="Belum ada gambar yang diunggah." wrapText="true" 
                       style="-fx-font-size: 12px;" prefHeight="80"/>

                <!-- Tombol kontrol -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="uploadButton" onAction="#onUploadClicked" text="ðŸ“ Unggah Gambar" prefWidth="150"/>
                    <Button fx:id="predictButton" onAction="#onPredictClicked" text="ðŸ”® Prediksi Hasil" prefWidth="150" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button fx:id="showGradCAMButton" onAction="#onShowGradCAMClicked" text="ðŸ”¥ Show Grad-CAM" prefWidth="150" 
                            style="-fx-background-color: #FF5722; -fx-text-fill: white;"/>
                </HBox>
                
                <Separator prefWidth="500"/>
                
                <!-- Panel Confidence Score Only -->
                <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-border-color: #cccccc; -fx-border-radius: 5;">
                    <Label text="ðŸ“Š Confidence Score" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    
                    <!-- Confidence Display -->
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8;">
                        <Label fx:id="confidenceLabel" text="0.00%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                    </VBox>
                    
                    <!-- Info Note -->
                    <Label text="â„¹ï¸ Tingkat keyakinan model terhadap prediksi utama." 
                           wrapText="true" style="-fx-font-size: 11px; -fx-text-fill: #888888;"/>
                </VBox>
            </VBox>
            
            <!-- Right Side: Probability Table -->
            <VBox spacing="10" style="-fx-background-color: #fafafa; -fx-padding: 15; -fx-border-color: #cccccc; -fx-border-radius: 5;" 
                  prefWidth="500" VBox.vgrow="ALWAYS">
                <Label text="ðŸ“Š Probabilitas Semua Kelas" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                
                <Label text="Tabel di bawah menampilkan probabilitas prediksi untuk semua kelas penyakit mata, diurutkan dari yang tertinggi." 
                       wrapText="true" style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>
                
                <TableView fx:id="probabilityTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="classNameColumn" text="Nama Penyakit" prefWidth="300"/>
                        <TableColumn fx:id="probabilityColumn" text="Probabilitas" prefWidth="140"/>
                    </columns>
                    <placeholder>
                        <Label text="Belum ada prediksi. Upload dan prediksi gambar untuk melihat probabilitas."/>
                    </placeholder>
                </TableView>
                
                <Label text="ðŸ’¡ Tip: Nilai probabilitas tinggi menunjukkan keyakinan model terhadap diagnosis tersebut." 
                       wrapText="true" style="-fx-font-size: 10px; -fx-text-fill: #4CAF50; -fx-font-style: italic;"/>
            </VBox>
        </HBox>

    </VBox>
</AnchorPane>